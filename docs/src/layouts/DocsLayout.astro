---
import BaseLayout from "./BaseLayout.astro";
import Sidebar from "../components/Sidebar.astro";

const { frontmatter } = Astro.props;
const title = frontmatter?.title ?? "Docs";
const description = frontmatter?.description;
---

<BaseLayout title={title} description={description}>
  <div class="mx-auto flex max-w-7xl">
    <!-- Desktop sidebar -->
    <aside
      class="hidden lg:block lg:w-72 lg:shrink-0 lg:border-r lg:border-stone-200 bg-stone-50/90 backdrop-blur"
    >
      <div class="sticky top-14 overflow-y-auto px-4 pt-6 pb-8">
        <Sidebar />
      </div>
    </aside>

    <!-- Mobile sidebar toggle -->
    <div class="lg:hidden">
      <input type="checkbox" id="sidebar-toggle" class="peer hidden" />
      <label
        for="sidebar-toggle"
        class="fixed top-18 left-4 z-40 cursor-pointer rounded-md border border-stone-200 bg-white p-2 text-sm font-medium text-stone-600 shadow-sm transition hover:text-stone-900"
      >
        <svg
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
      <div
        class="fixed inset-0 z-30 hidden bg-black/40 peer-checked:block"
        onclick="document.getElementById('sidebar-toggle').checked = false"
      >
      </div>
      <nav
        class="fixed top-0 left-0 z-30 hidden h-full w-72 overflow-y-auto border-r border-stone-200 bg-stone-50 px-4 pt-20 pb-8 shadow-lg peer-checked:block"
      >
        <Sidebar />
      </nav>
    </div>

    <!-- Main content -->
    <main class="min-w-0 flex-1 px-4 py-6 sm:px-6 lg:px-8">
      <article class="prose prose-stone mx-auto max-w-3xl prose-headings:font-semibold prose-headings:text-stone-900 prose-a:text-indigo-600 prose-a:no-underline hover:prose-a:text-indigo-500">
        <h1 class="text-lg font-semibold text-stone-900 sm:text-xl">{title}</h1>
        <slot />
      </article>
    </main>
  </div>
</BaseLayout>
