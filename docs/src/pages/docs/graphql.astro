---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Sidebar from "../../components/Sidebar.astro";
import fs from "node:fs";
import path from "node:path";

const base = import.meta.env.BASE_URL;
const title = "GraphQL Reference";
const description = "Static GraphQL API reference for Craftplan";

const generatedFile = path.resolve("src/generated/graphql/index.html");
let spectaqlHtml = "";

try {
  spectaqlHtml = fs.readFileSync(generatedFile, "utf-8");
} catch {
  // Generated files not found â€” will show fallback message
}
---

<BaseLayout title={title} description={description}>
    <div class="mx-auto flex max-w-7xl">
        <!-- Desktop sidebar -->
        <aside
            class="hidden lg:block lg:w-72 lg:shrink-0 lg:border-r lg:border-stone-200 bg-stone-50/90 backdrop-blur"
        >
            <div class="sticky top-14 overflow-y-auto px-4 pt-6 pb-8">
                <Sidebar />
            </div>
        </aside>

        <!-- Mobile sidebar toggle -->
        <div class="lg:hidden">
            <input type="checkbox" id="sidebar-toggle" class="peer hidden" />
            <label
                for="sidebar-toggle"
                class="fixed top-18 left-4 z-40 cursor-pointer rounded-md border border-stone-200 bg-white p-2 text-sm font-medium text-stone-600 shadow-sm transition hover:text-stone-900"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </label>
            <div
                class="fixed inset-0 z-30 hidden bg-black/40 peer-checked:block"
                onclick="document.getElementById('sidebar-toggle').checked = false"
            >
            </div>
            <nav
                class="fixed top-0 left-0 z-30 hidden h-full w-72 overflow-y-auto border-r border-stone-200 bg-stone-50 px-4 pt-20 pb-8 shadow-lg peer-checked:block"
            >
                <Sidebar />
            </nav>
        </div>

        <!-- Main content -->
        <main class="min-w-0 flex-1 flex flex-col">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <div
                    class="prose prose-stone mb-4 max-w-3xl prose-headings:font-semibold prose-headings:text-stone-900 prose-a:text-indigo-600 prose-a:no-underline hover:prose-a:text-indigo-500"
                >
                    <h1 class="text-lg font-semibold text-stone-900 sm:text-xl">
                        {title}
                    </h1>
                    <p>
                        Craftplan exposes a <a href="https://graphql.org"
                            >GraphQL</a
                        > API at <code>/api/graphql</code>. All requests require
                        a Bearer token &mdash; generate one in
                        <a href={`${base}docs/settings/`}
                            >Settings &rarr; API Keys</a
                        >
                        (tokens use the <code>cpk_</code> prefix).
                    </p>
                </div>
            </div>

            <div class="flex-1 px-4 sm:px-6 lg:px-8 pb-12">
                {spectaqlHtml ? (
                    <>
                        <style>{`
                            #spectaql {
                                all: initial;
                                display: block;
                                font-family: system-ui, -apple-system, sans-serif;
                                color: #1c1917;
                            }
                            #spectaql *,
                            #spectaql *::before,
                            #spectaql *::after {
                                box-sizing: border-box;
                            }
                            #spectaql #sidebar { display: none !important; }
                            #spectaql #docs { margin-left: 0 !important; padding-left: 0 !important; }
                            #spectaql .doc-heading { display: none !important; }
                            #spectaql pre {
                                background: #f5f5f4;
                                border-radius: 0.375rem;
                                padding: 0.75rem 1rem;
                                overflow-x: auto;
                            }
                            #spectaql code {
                                font-size: 0.875rem;
                            }
                            #spectaql a {
                                color: #4f46e5;
                                text-decoration: none;
                            }
                            #spectaql a:hover {
                                color: #6366f1;
                            }
                        `}</style>
                        <div set:html={spectaqlHtml} />
                    </>
                ) : (
                    <div class="rounded-md border border-amber-200 bg-amber-50 p-4 text-sm text-amber-800">
                        <p class="font-medium">GraphQL reference not generated yet.</p>
                        <p class="mt-1">
                            Run <code class="rounded bg-amber-100 px-1 py-0.5">npm run generate-graphql-docs</code> from the <code class="rounded bg-amber-100 px-1 py-0.5">docs/</code> directory to generate the documentation.
                        </p>
                    </div>
                )}
            </div>
        </main>
    </div>
</BaseLayout>
