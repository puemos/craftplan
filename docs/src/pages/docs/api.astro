---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Sidebar from "../../components/Sidebar.astro";
import { ScalarComponent } from "@scalar/astro";

const base = import.meta.env.BASE_URL;
const title = "API Reference";
const description = "Interactive API reference for the Craftplan JSON:API";
---

<BaseLayout title={title} description={description}>
    <div class="mx-auto flex max-w-7xl">
        <!-- Desktop sidebar -->
        <aside
            class="hidden lg:block lg:w-72 lg:shrink-0 lg:border-r lg:border-stone-200 bg-stone-50/90 backdrop-blur"
        >
            <div class="sticky top-14 overflow-y-auto px-4 pt-6 pb-8">
                <Sidebar />
            </div>
        </aside>

        <!-- Mobile sidebar toggle -->
        <div class="lg:hidden">
            <input type="checkbox" id="sidebar-toggle" class="peer hidden" />
            <label
                for="sidebar-toggle"
                class="fixed top-18 left-4 z-40 cursor-pointer rounded-md border border-stone-200 bg-white p-2 text-sm font-medium text-stone-600 shadow-sm transition hover:text-stone-900"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </label>
            <div
                class="fixed inset-0 z-30 hidden bg-black/40 peer-checked:block"
                onclick="document.getElementById('sidebar-toggle').checked = false"
            >
            </div>
            <nav
                class="fixed top-0 left-0 z-30 hidden h-full w-72 overflow-y-auto border-r border-stone-200 bg-stone-50 px-4 pt-20 pb-8 shadow-lg peer-checked:block"
            >
                <Sidebar />
            </nav>
        </div>

        <!-- Main content -->
        <main class="min-w-0 flex-1">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <div
                    class="prose prose-stone mb-6 max-w-3xl prose-headings:font-semibold prose-headings:text-stone-900 prose-a:text-indigo-600 prose-a:no-underline hover:prose-a:text-indigo-500"
                >
                    <h1 class="text-lg font-semibold text-stone-900 sm:text-xl">
                        {title}
                    </h1>
                    <p>
                        Craftplan exposes a <a href="https://jsonapi.org"
                            >JSON:API</a
                        >-compliant REST API. All endpoints require a Bearer
                        token â€” generate one in
                        <a href={`${base}docs/settings/`}
                            >Settings &rarr; API Keys</a
                        >
                        (tokens use the <code>cpk_</code> prefix).
                    </p>
                </div>
            </div>

            <div class="px-4 sm:px-6 lg:px-8 pb-12">
                <ScalarComponent configuration={{
                    url: `${base}openapi.json`,
                    theme: 'none',
                    darkMode: false,
                    showDeveloperTools: 'never',
                    hideDownloadButton: false,
                    hideModels: false,
                    hideDarkModeToggle: true,
                    layout: 'modern',
                    customCss: `
            #scalar-app {
              --scalar-font: 'Inter', ui-sans-serif, system-ui, sans-serif;
              --scalar-color-1: #292524;
              --scalar-color-2: #57534e;
              --scalar-color-3: #a8a29e;
              --scalar-color-accent: #4f46e5;
              --scalar-background-1: #fafaf9;
              --scalar-background-2: #f5f5f4;
              --scalar-background-3: #e7e5e4;
              --scalar-border-color: #d6d3d1;
              --scalar-color-green: #16a34a;
              --scalar-color-red: #dc2626;
              --scalar-color-yellow: #ca8a04;
              --scalar-color-blue: #4f46e5;
              --scalar-color-orange: #fd4f00;
              --scalar-radius: 0.375rem;
              --scalar-radius-lg: 0.5rem;
            }
            #scalar-app [style*="position: sticky"] {
              top: 56px !important;
            }
          `,
                }} />
            </div>
        </main>
    </div>
</BaseLayout>
