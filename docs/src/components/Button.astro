---
const {
  variant = "default",
  size = "base",
  href,
  target,
  rel
} = Astro.props;

const baseClasses = "cursor-pointer inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-stone-300 disabled:pointer-events-none disabled:opacity-50";

const variantClasses = {
  primary: "bg-indigo-600 text-white border border-indigo-600 shadow-xs hover:bg-indigo-500",
  default: "bg-stone-200/50 border border-stone-300 shadow-xs hover:bg-stone-200 hover:text-gray-800",
};

const sizeClasses = {
  base: "h-9 px-4 py-2",
  lg: "h-11 px-5 py-3 text-base",
};

const classes = `${baseClasses} ${variantClasses[variant] || variantClasses.default} ${sizeClasses[size] || sizeClasses.base}`;
---

{href ? (
  <a href={href} class={classes} target={target} rel={rel}><slot /></a>
) : (
  <button class={classes}><slot /></button>
)}
